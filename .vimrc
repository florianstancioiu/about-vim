" indent with 4 spaces
set tabstop     =4
set softtabstop =4
set shiftwidth  =4
set expandtab

" show numbers
set number

" auto change dir for creating files
set autochdir

" make left and right keys switch lines
set whichwrap+=<,>,[,]

" prevent E382:cannot write
setlocal buftype=

" highlight all search results
set hlsearch

" show incremental search results as you type
set incsearch

" disable swap file
set noswapfile
